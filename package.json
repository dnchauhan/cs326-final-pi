{
    "name": "spighetti",
    "scripts": {
        "start": "node src/server/index.js",
        "lint": "eslint src/client/ server/"
    },
    "devDependencies": {
        "eslint": "^7.11.0",
        "http-server": "^0.12.3"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12
        },
        "rules": {
            "consistent-return": "error",
            "no-var": "error",
            "eqeqeq": "error",
            "semi": [
                "error",
                "always"
            ],
            "curly": [
                "warn",
                "all"
            ],
            "prefer-const": [
                "warn",
                {}
            ]
        }
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "node-fetch": "^2.6.1",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pg": "^8.4.2",
        "pg-promise": "^10.7.3"
    },
    "engines": {
        "node": ">=12.0.0"
    }
}